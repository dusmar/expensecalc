<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="Calculation" extends="struts-default">

		<action name="index">
			<result> /WEB-INF/views/Calculation.jsp</result>
		</action>

		<action name="calculationAction" class="calculateAction" method="execute">
			<result name="success">/WEB-INF/views/CalculationResult.jsp</result>
			<result name="input">/WEB-INF/views/Calculation.jsp</result>
		</action>
	</package>
</struts>